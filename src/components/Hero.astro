<script is:inline>
  const counterBack = document.getElementById("counter-back");
  const targetDate = new Date("November 15, 2024 13:00:00").getTime();
  const targetDateElement = document.getElementById("target-date");
  const targetTimeElement = document.getElementById("target-time");

  function updateCounter() {
    const now = new Date().getTime();
    const distance = targetDate - now;

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor(
      (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
    );
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    counterBack.innerHTML = `${days} <span class="font-bold">días</span> ${hours} <span class="font-bold">horas</span> ${minutes} <span class="font-bold">minutos</span> ${seconds} <span class="font-bold">segundos</span>`;

    if (distance < 0) {
      clearInterval(interval);
      counterBack.innerHTML = "¡Llegó el día felices 15 años!";
    }
  }

  const interval = setInterval(updateCounter, 1000);
  updateCounter();
  const options = { year: "numeric", month: "long", day: "numeric" };
  targetDateElement.innerHTML = new Date(targetDate).toLocaleDateString(
    "es-ES",
    options
  );

  const timeOptions = { hour: "2-digit", minute: "2-digit" };
  targetTimeElement.innerHTML =
    new Date(targetDate).toLocaleTimeString("es-ES", timeOptions) + " hrs.";
</script>
