---
import { eventos } from "@data";
import { Icon } from "astro-icon/components";
import Banderines from "@/components/Banderines.astro";
---

<section class="eventos py-7">
  <Banderines />
  <div class="max-w-screen-xl mx-auto px-1 xl:px-2">
    <h2 class="seccion text-white">Eventos</h2>
    <div class="eventos grid sm:grid-cols-2 lg:grid-cols-3 gap-5 mt-5">
      {
        eventos.map((evento) => (
          <article class="card rounded-lg overflow-hidden border border-gray-500 group">
            <header class="overflow-hidden relative">
              <img
                class="group-hover:scale-110 transition-all group ease-in-out relative z-10"
                src={evento.imagen}
                alt={evento.descripcion}
              />
              <div class="h-24 bg-gradient-to-t from-pinkown w-full absolute z-20 self-end" />
            </header>
            <footer>
              <div class="bg-slate-200/75 py-1">
                <h2 class="text-xl text-center">{evento.nombre}</h2>
                {evento.ponente && (
                  <p class="text-sm font-light text-center">
                    Ponente: {evento.ponente}
                  </p>
                )}
              </div>
              <div class="grid grid-cols-3 p-2 border-t border-slate-800 border-dashed bg-slate-50">
                <div class="col-span-2 gap-2 text-sm">
                  <p>{evento.descripcion}</p>
                </div>
                <div class="text-sm flex flex-col items-end justify-center">
                  <p class="inline-flex items-center gap-1">
                    <Icon name="bi:calendar" />
                    {evento.fecha}
                  </p>
                  <p class="inline-flex items-center gap-1">
                    <Icon name="bi:clock" />
                    {evento.hora}
                  </p>
                  <p class="inline-flex items-center gap-1">
                    <Icon name="bi:pin-map" />
                    {evento.lugar}
                  </p>
                </div>
              </div>
            </footer>
          </article>
        ))
      }
    </div>
  </div>
</section>
<style>
  .eventos {
    background-color: #7590a2;
  }
  h2.seccion {
    font-size: var(--headings-xl);
    font-family: var(--font-titulos);
    text-align: center;
    margin-top: 4rem;
  }
  p {
    font-size: var(--font-cuerpo);
    font-family: var(--font-cuerpo);
  }
  img {
    width: 100%;
    height: auto;
  }
  .eventos {
    .card {
      view-timeline-name: --card-fade;
      view-timeline-axis: block;
      animation-timeline: --card-fade;
      animation-name: fade-in;
      animation-range: entry 0% cover 52%;
      h2 {
        font-family: var(--font-titulos);
      }
    }
  }
</style>
